/* pages/login/login.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 30rpx;
}

.logo {
    width: 144rpx;
    height: 144rpx;
    margin: 30rpx 0;
}

.btn-login {
    height: 80rpx;
    width: 100%;
    /* flex-grow: 1; */
    text-align: center;
    line-height: 80rpx;
    border-radius: 10rpx;
}

.wechat {
    background-color: #43bd55;
    color: #fff;
    margin: 30rpx 0;
}

.douban {
    background-color: #fff;
    color: #43bd55;
    border: 2rpx solid #43bd55;
}

.agreement {
    font-size: 24rpx;
    color: #9d9d9d;
    display: flex;
    position: absolute;
    bottom: 50rpx;
}

.open {
    color: #4bb65c;
    margin-left: 10rpx;
}