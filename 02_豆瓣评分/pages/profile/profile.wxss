/* pages/profile/profile.wxss */
page {
    height: 100%;
}

.container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.login-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 400rpx;
    position: relative;
}

.login-wrapper image {
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 100%;
}

.login-wrapper .login {
    width: 300rpx;
    height: 80rpx;
    color: #1a4921;
    background-color: #fff;
    text-align: center;
    line-height: 80rpx;
    border-radius: 40rpx;
    font-size: 36rpx;
    box-shadow: 5rpx 5rpx 10rpx 0rpx #000;
}

.content {
    margin-top: 30rpx;
}

.title-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-left: 30rpx;
    padding-right: 40rpx;
}

.title-wrapper .title {
    font-size: 46rpx;
    font-weight: bold;
}

.title-wrapper .view {
    display: flex;
    align-items: center;
    font-size: 36rpx;
    color: #7f7f7f;
}

.content .arrow {
    width: 20rpx;
    height: 20rpx;
    border: 4rpx solid #7f7f7f;
    transform: rotate(-45deg);
    border-top: none;
    border-left: none;
    margin-left: 15rpx;
}

.item {
    display: flex;
    margin-top: 30rpx;
    padding-left: 30rpx;
    padding-right: 20rpx;
    font-size: 28rpx;
    align-items: center;
}

.item .icon {
    width: 108rpx;
    height: 108rpx;
    margin-right: 30rpx;
}

.info-wrapper {
    flex-grow: 1;
}

.info-wrapper .info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 20rpx;
}

.info .left .top {
    margin-bottom: 10rpx;
}

.info .left .bottom {
    display: flex;
    color: #7f7f7f;
    font-size: 60rpx;
    align-items: flex-end;
}

.info .left .see {
    margin-left: 10rpx;
    font-size: 28rpx;
    margin-bottom: 15rpx;
}

.info .right {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.info .right .text {
    color: #c1c1c1;
    margin-right: 20rpx;
}

.begin-wrapper {
    display: flex;
    align-items: center;
}

.begin-wrapper .begin {
    border-radius: 10rpx;
    background-color: #f5f5f5;
    padding: 10rpx 15rpx;
    color: #4a4a4a;
}

.divider {
    background-color: rgba(0, 0, 0, 0.1);
    height: 2rpx;
    width: 100%;
    margin-top: 15rpx;
}

.version {
    color: #c0c0c0;
    text-align: center;
    font-size: 24rpx;
    margin: 30rpx 0;
}