/* pages/home/home.wxss */

.search-wrapper {
    background-color: #43bd55;
    height: 60rpx;
    padding: 20rpx 15rpx;
    align-items: center;
    margin-bottom: 30rpx;
}

.search {
    background-color: #ffffff;
    height: 100%;
    display: flex;
    color: #b2b2b2;
    border-radius: 10rpx;
    align-items: center;
    justify-content: center;
}

.search image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.title-wrapper {
    display: flex;
    font-size: 32rpx;
    justify-content: space-between;
    padding: 0 30rpx;
}

.title-wrapper .title {
    font-weight: bold;
}

.title-wrapper .more {
    display: flex;
    align-items: center;
    color: #43bd55;
}

.title-wrapper .arrow {
    width: 16rpx;
    height: 16rpx;
    border: 2rpx solid #43bd55;
    transform: rotate(-45deg);
    border-top: none;
    border-left: none;
    margin-left: 6rpx;
}